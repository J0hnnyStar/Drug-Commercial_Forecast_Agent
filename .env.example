# .env.example (redacted template for collaborators)
ENV=development
PRIMARY_PROVIDER=openai
SEARCH_PROVIDER=brave
ENABLE_PERPLEXITY_REVIEW=false

OPENAI_API_KEY=""
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MODEL="gpt-5"
OPENAI_USE_WEB_SEARCH=false
OPENAI_WEB_SEARCH_MAX_CALLS_PER_TASK=2

DEEPSEEK_API_KEY=""
DEEPSEEK_BASE_URL="https://api.deepseek.com"
DEEPSEEK_MODEL="deepseek-chat"
DEEPSEEK_ENABLE_CACHE=true

PERPLEXITY_API_KEY=""
PERPLEXITY_BASE_URL="https://api.perplexity.ai"
PERPLEXITY_MODEL="sonar-reasoning-pro"
PERPLEXITY_MAX_SEARCHES_PER_TASK=3

GOOGLE_API_KEY=""
GEMINI_MODEL="gemini-2.5-pro"

ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-3-7-sonnet"

BRAVE_SEARCH_API_KEY=""
BRAVE_SEARCH_ENDPOINT="https://api.search.brave.com/res/v1/web/search"

TAVILY_API_KEY=""
TAVILY_ENDPOINT="https://api.tavily.com/search"

CLINICALTRIALS_BASE_URL="https://clinicaltrials.gov/api/v2"
PUBMED_EUTILS_BASE_URL="https://eutils.ncbi.nlm.nih.gov/entrez/eutils"
OPENFDA_BASE_URL="https://api.fda.gov"

MAX_TOKENS_GPT5=6000
MAX_TOKENS_DEEPSEEK=4000
MAX_TOKENS_REVIEW=3000
DAILY_BUDGET_CENTS=300
ROUTER_TIMEOUT_MS=60000
RETRY_MAX_ATTEMPTS=2
FALLBACK_ON_PROVIDER_ERROR=true

ENABLE_USAGE_LOGS=true
LOG_LEVEL=info
